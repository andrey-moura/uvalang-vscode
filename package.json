{
  "name": "andylang",
  "displayName": "andylang",
  "description": "This extensions provides syntax highlight, definitions navigation and build and run features for applications written in andy language.",
  "publisher": "andrey-moura",
  "version": "0.1.2",
  "icon": "resources/andylang-vscode.png",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "andy",
        "aliases": [
          "andy",
          "andy"
        ],
        "extensions": [
          ".andy"
        ],
        "icon": {
          "light": "resources/andy.light.png",
          "dark": "resources/icon.dark.png"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "andy",
        "scopeName": "source.andy",
        "path": "./syntaxes/andy.tmLanguage.json"
      }
    ],
    "debuggers": [
      {
        "type": "andy",
        "label": "Run",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "The path to the main Andy file to run.",
                "default": "application.andy"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "name": "Run Andy Program",
            "type": "andy",
            "request": "launch",
            "program": "application.andy"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "typescript": ">=5.0.3 <5.1.0",
    "vscode-languageserver": "^7.0.0"
  }
}
