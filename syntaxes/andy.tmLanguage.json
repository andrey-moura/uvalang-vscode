{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "andy",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#preprocessor"
		},
		{
			"include": "#literals"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#function-calls"
		},
		{
			"include": "#single-quoted-strings"
		},
		{
			"include": "#double-quoted-strings"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#var-declarations"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"begin": "\\b(type|module)\\b\\s+([A-Z][a-zA-Z0-9_]*)",
					"beginCaptures": {
					  "1": { "name": "keyword.control.andy" },
					  "2": { "name": "entity.name.type.andy" }
					},
					"end": "(?=$|;|\\n)",
					"patterns": [
					  {
						"name": "keyword.control.andy",
						"match": "\\b(extends|:|<)\\b"
					  },
					  {
						"name": "entity.name.type.andy",
						"match": "\\b([A-Z][a-zA-Z0-9_]*)\\b"
					  }
					]
				},
				{
					"begin": "\\b(fn)\\b\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
					"beginCaptures": {
					  "1": { "name": "keyword.control.andy" },
					  "2": { "name": "entity.name.function.andy" }
					},
					"end": "\\)",
					"name": "meta.function.definition.andy",
					"patterns": [
					  {
						"name": "variable.parameter.named.andy",
						"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\s*:"
					  },
					  {
						"name": "variable.parameter.positional.andy",
						"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
					  }
					]
				},
				{
					"begin": "\\b(fn)\\b\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
					"beginCaptures": {
						"1": { "name": "keyword.control.andy" },
						"2": { "name": "entity.name.function.andy" }
					},
					"end": "(?=$|;|\\n)"
				},
				{
					"name": "keyword.control.andy",
					"match": "\\b(if|while|break|for|foreach|in|return|end|super)\\b"
				},
				{
					"begin": "\\b(within)\\b\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
					"beginCaptures": {
						"1": { "name": "keyword.control.andy" },
						"2": { "name": "variable.name.andy" }
					},
					"end": "(?=$|;|\\n)"
				},
				{
					"name": "storage.type.function.andy",
					"match": "\\b(new)\\b"
				}
			]
		},
		"literals": {
			"patterns": [
				{
					"name": "constant.numeric.andy",
					"match": "\\b\\d+(\\.\\d+)?\\b"
				},
				{
					"name": "constant.language.boolean.andy",
					"match": "\\b(true|false|null)\\b"
				},
				{
					"name": "constant.language.symbol.andy",
					"match": ":[a-zA-Z_][a-zA-Z0-9_]*"
				}
			]
		},
		"function-calls": {
			"patterns": [
			  {
				"name": "entity.name.function.call.andy",
				"match": "\\b([a-zA-Z][a-zA-Z0-9_]*[!?]?)\\s*(?=([\\?\\!]))|([a-zA-Z][a-zA-Z0-9_]*[!?]?)\\s*(?=(\\())\\b"
			  },
			  {
				"name": "entity.name.function.call.andy", 
				"match": "\\b([a-zA-Z][a-zA-Z0-9_]*[!?]?)\\s+(?=(\\d|'.*'|\").*?)"
			  },
			  {
				"name": "entity.name.function.call.andy",
				"match": "\\b([a-zA-Z][a-zA-Z0-9_]*[!?]?)\\s+(?=:[a-zA-Z_][a-zA-Z0-9_]*)"
			  }
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.andy",
					"match": "//.*"
				},
				{
					"name": "comment.block.andy",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"single-quoted-strings": {
			"name": "string.single.double.andy",
			"begin": "'",
			"end": "'"
		},
		"double-quoted-strings": {
			"name": "string.quoted.double.andy",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.andy",
					"match": "\\\\."
				}
			]
		},
		"preprocessor": {
			"patterns": [
				{
					"name": "keyword.control.preprocessor.andy",
					"match": "#\\w+"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.parameter.andy",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*:"
				}
			]
		},
		"var-declarations": {
			"patterns": [
				{
				"match": "\\b(var)\\b\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
				"captures": {
					"1": { "name": "storage.modifier.var.andy" },
					"2": { "name": "variable.name.andy" }
				},
				"name": "meta.var.declaration.andy"
				}
			]
		}
	},
	"scopeName": "source.andy"
}